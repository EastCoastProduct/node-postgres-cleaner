---
  rules:
    semi:
      - 2
      - "never"
    strict:
      - 2
      - "global"
    quotes:
      - 2
      - "single"
    curly:
      - 2
      - "multi-line"
    comma-dangle:
      - 2
      - "always-multiline"
    eqeqeq:
      - 0
      - "smart"
    new-cap: 0
    indent:
      - 2
      - 2
    brace-style:
      - 2
      - "1tbs"
    no-else-return: 2
    no-eval: 2
    no-loop-func: 2
    no-dupe-keys: 2
    no-empty: 2
    no-func-assign: 2
    no-invalid-regexp: 2
    no-irregular-whitespace: 2
    no-console: 1
    no-debugger: 2
    no-lonely-if: 2
    no-trailing-spaces: 2
    no-underscore-dangle: 0
    no-unused-vars: 2
    no-undef: 2
    no-var: 2
    max-nested-callbacks:
      - 2
      - 3
    camelcase: 2
    eol-last: 2
    max-len:
      - 2
      - 80
    space-before-function-paren:
      - 2
      - "never"
    space-before-blocks:
      - 2
      - "always"
    keyword-spacing:
      - "error"
      - before: true
    prefer-template: 2
  env:
    es6: true
    node: true
